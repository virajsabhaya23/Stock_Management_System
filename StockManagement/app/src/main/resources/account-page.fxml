<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="430.0" prefWidth="599.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.accounts">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="73.0" prefWidth="559.0" style="-fx-background-color: #059BD0;">
      <children>
         <Button fx:id="back_button" layoutX="499.0" layoutY="23.0" mnemonicParsing="false" onAction="#onBackButton" text="back" />
         <Label layoutX="128.0" layoutY="19.0" text="Cash Management">
            <font>
               <Font name="Arial Bold" size="30.0" />
            </font>
         </Label>
      </children>
   </AnchorPane>
   <AnchorPane prefHeight="107.0" prefWidth="559.0" style="-fx-background-color: #55C6EE;">
      <children>
         <Label fx:id="balance_label" layoutX="49.0" layoutY="29.0" prefHeight="45.0" prefWidth="498.0" text="Account Balance: $">
            <font>
               <Font name="Arial Bold" size="30.0" />
            </font>
         </Label>
      </children>
   </AnchorPane>
   <AnchorPane prefHeight="181.0" prefWidth="559.0" style="-fx-background-color: #A2DBEF;">
      <children>
         <Button fx:id="withdraw_button" layoutX="336.0" layoutY="80.0" mnemonicParsing="false" onAction="#onWithdrawButtonClick" prefHeight="41.0" prefWidth="67.0" text="Withdraw" />
          <Button fx:id="deposit_button" layoutX="452.0" layoutY="80.0" onAction="#onDepositButtonClick" prefHeight="41.0" prefWidth="57.0" text="Deposit" />
         <TextField fx:id="enter_amount" layoutX="31.0" layoutY="84.0" prefHeight="35.0" prefWidth="249.0" promptText="Enter amount:" />
         <Label fx:id="label" layoutX="31.0" layoutY="28.0" prefHeight="45.0" prefWidth="399.0" text="Deposit or Withdraw cash">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
      </children>
   </AnchorPane>
</VBox>
