package application;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Node;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.PasswordField;
import javafx.scene.control.TextField;
import javafx.stage.Stage;

public class SignUpController {

	public SignUpController(){}
	
	private Stage stage;
	private Scene scene;
	private Parent root;
	@FXML 
	public TextField firstname_field;
	@FXML 
	public Button back_login_button;
	@FXML
	public Button secondSignUpButton;
	@FXML
	public TextField lastname_field;
	
	@FXML
	public TextField email_field;
	
	@FXML 
	protected PasswordField signup_password_field;
	
	@FXML 
	protected PasswordField re_enter_field;
	
	String firstName;
	String lastName;
	String email;
	String signUpPassword;
	String reEnterPassword;
	
	
	public void userInfoData() throws IOException 
	{
		
		firstName = firstname_field.getText();
		lastName = lastname_field.getText();
		email= email_field.getText();
		signUpPassword= signup_password_field.getText();
		reEnterPassword= re_enter_field.getText();
				
		BufferedWriter out =new BufferedWriter(new FileWriter("UserInformation.txt"));
		out.write(firstName);
		out.write(lastName);
		out.write(email);
		out.write(signUpPassword);
		out.write(reEnterPassword);
		out.close();
	}
	
	
	
	
	public void backToLogin(ActionEvent event) throws IOException
	{
		root = FXMLLoader.load(getClass().getResource("log-in.fxml"));
		stage=(Stage)((Node)event.getSource()).getScene().getWindow();
		scene=new Scene(root);
		stage.setScene(scene);
		stage.show();
				
				
			
	}		
		
}
